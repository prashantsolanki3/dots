# Install with:
#   sudo install -m 600 ephemeral-github-actions-runner.env /etc/
RUNNER_SCOPE=repo
RUNNER_NAME=runner-{{ item.name }}
REPO_URL=https://github.com/{{ github_account }}/{{ item.name }}
# Alternate for org scope:
#RUNNER_SCOPE=org
#ORG_NAME=your-org
LABELS={{ item.runner_labels | join(',') }}
ACCESS_TOKEN={{ access_token }}
# RUNNER_WORKDIR=/mnt/env/{{item.name}}/work
DISABLE_AUTO_UPDATE=1
EPHEMERAL=1